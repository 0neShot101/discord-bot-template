  "Guard (Factory)": {
    "prefix": "guard-factory",
    "body": [
      "import { GuardBuilder } from '@structures/Guard';",
      "import { MessageFlags } from 'discord.js';",
      "",
      "export const ${1:myGuard} = (${2:param}: ${3:string}) =>",
      "  new GuardBuilder().run(async (interaction, next) => {",
      "    const condition = ${4:true};",
      "",
      "    if (!condition) {",
      "      await interaction.reply({",
      "        'content': `${5:Guard failed for \\${$2\\}}`,",
      "        'flags': MessageFlags.Ephemeral,",
      "      });",
      "      return;",
      "    }",
      "",
      "    next();",
      "  });"
    ],
    "description": "Creates a parameterized guard factory function"
