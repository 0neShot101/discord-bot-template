  "Slash Command with Guards": {
    "prefix": "command-guards",
    "body": [
      "import { cooldown } from '@guards/cooldown';",
      "import { Command } from '@structures/Command';",
      "import { MessageFlags } from 'discord.js';",
      "",
      "export const ${1:MyCommand} = new Command({",
      "  'builder': builder => builder.setName('${2:name}').setDescription('${3:Description}'),",
      "  'guards': [cooldown(${4:5}, '${5|user,guild,channel,global|}')],",
      "}).run(async interaction => {",
      "  await interaction.reply({",
      "    'content': '${6:Response}',",
      "    'flags': MessageFlags.Ephemeral,",
      "  });",
      "});"
    ],
    "description": "Creates a new slash command with guard middleware"
  },
  "Slash Command with Subcommands": {
    "prefix": "command-sub",
    "body": [
      "import { Command } from '@structures/Command';",
      "import { MessageFlags } from 'discord.js';",
      "",
      "export const ${1:MyCommand} = new Command({",
      "  'builder': builder =>",
      "    builder",
      "      .setName('${2:name}')",
      "      .setDescription('${3:Description}')",
      "      .addSubcommand(sub =>",
      "        sub.setName('${4:subname}').setDescription('${5:Sub description}')",
      "      ),",
      "  'subcommands': {",
      "    '${4:subname}': {",
      "      'handler': async interaction => {",
      "        await interaction.reply({",
      "          'content': '${6:Subcommand response}',",
      "          'flags': MessageFlags.Ephemeral,",
      "        });",
      "      },",
      "    },",
      "  },",
      "}).run();"
    ],
    "description": "Creates a new slash command with subcommand routing"
  },
