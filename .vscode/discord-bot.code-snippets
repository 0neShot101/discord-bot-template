  "Autocomplete Handler": {
    "prefix": "autocomplete",
    "body": [
      "import { Interaction } from '@structures/Interaction';",
      "",
      "export const ${1:MyAutocomplete} = new Interaction({",
      "  'type': 'autocomplete',",
      "  'customId': '${2:autocomplete_id}',",
      "}).run(async interaction => {",
      "  const focusedValue = interaction.options.getFocused().toLowerCase();",
      "",
      "  const choices = [",
      "    { 'name': '${3:Option 1}', 'value': '${4:value1}' },",
      "    { 'name': '${5:Option 2}', 'value': '${6:value2}' },",
      "  ];",
      "",
      "  const filtered = choices",
      "    .filter(choice => choice.name.toLowerCase().includes(focusedValue))",
      "    .slice(0, 25);",
      "",
      "  await interaction.respond(filtered);",
      "});"
    ],
    "description": "Creates an autocomplete handler for slash command options"
