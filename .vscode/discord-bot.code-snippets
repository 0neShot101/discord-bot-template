    "prefix": "guard",
    "body": [
      "import { GuardBuilder } from '@structures/Guard';",
      "import { MessageFlags } from 'discord.js';",
      "",
      "export const ${1:myGuard} = new GuardBuilder().run(async (interaction, next) => {",
      "  const ${2:condition} = ${3:true};",
      "",
      "  if (!$2) {",
      "    await interaction.reply({",
      "      'content': '${4:You cannot use this command.}',",
      "      'flags': MessageFlags.Ephemeral,",
      "    });",
      "    return;",
      "  }",
      "",
      "  next();",
      "});"
    ],
    "description": "Creates a guard middleware for commands"
